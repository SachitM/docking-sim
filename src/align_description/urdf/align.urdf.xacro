        <box size="0.5 0.5 0.01"/>
        <!-- <mesh filename="package://align_description/meshes/chassis.stl" scale="0.001 0.001 0.001"/> -->
      </geometry>
    </collision>
    <inertial>
        <origin rpy="0 0 1.57079633" xyz="-0.02 0 0"/>
        <mass value="1"/>
        <inertia
          ixx="1.0" ixy="0.0" ixz="0.0"
          iyy="1.0" iyz="0.0"
          izz="1.0"/>
    </inertial>
  </link>
  <gazebo reference="lift_link">
    <material>Gazebo/Grey</material>
    <selfCollide>false</selfCollide>
  </gazebo>

  <joint name="hokuyo_joint" type="fixed">
    <origin xyz="1.1 0.00 0.1" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="hokuyo" />
  </joint>

  <link name="hokuyo">
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
